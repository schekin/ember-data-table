<tr>
  {{#if enableSelection}}
    <th><!-- Checkbox --></th>
  {{/if}}
  {{#if enableLineNumbers}}
    <th><!-- Linenumbers --></th>
  {{/if}}
  {{#if hasBlock}}
    {{yield}}
  {{else}}
    {{#each fields as |field|}}
      {{th-sortable field=field label=field currentSorting=sort}}
    {{/each}}
  {{/if}}
</tr>
